{
  "private": true,
  "name": "generates",
  "description": "Easier file generation/scaffolding/bootstrapping",
  "author": {
    "name": "Ian Walter",
    "url": "https://ianwalter.dev"
  },
  "license": "SEE LICENSE IN LICENSE",
  "scripts": {
    "lint": "eslint .",
    "build": "npm --prefix packages/merger run build",
    "test": "ultra --raw -r --filter 'generators/*' --filter 'packages/*' test"
  },
  "workspaces": [
    "generators/*",
    "packages/*"
  ],
  "devDependencies": {
    "@changesets/cli": "^2.11.1",
    "@ianwalter/bff": "^9.9.1",
    "@ianwalter/eslint-config": "^6.0.0",
    "@ianwalter/renovate-config": "^1.4.0",
    "ultra-runner": "^3.6.0"
  },
  "renovate": {
    "extends": [
      "@ianwalter"
    ]
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@ianwalter"
    ],
    "rules": {
      "no-eval": 0
    }
  },
  "eslintIgnore": [
    "dist"
  ]
}
